<Window x:Class="redshift_tray.DebugConsole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Debug Console" Height="400" Width="600" Loaded="Window_Loaded" Closed="Window_Closed">
  <Grid>
    <DockPanel>
      <DockPanel DockPanel.Dock="Bottom" Margin="10,0,10,10">
        <Button Content="Close" DockPanel.Dock="Right" Height="21" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75"/>
        <Button Content="Copy to Clipboard" DockPanel.Dock="Right" Height="21" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120" Margin="0,0,10,0"/>
      </DockPanel>
      <TextBox x:Name="Output" DockPanel.Dock="Top" HorizontalAlignment="Stretch" Margin="10,10,10,10" TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Stretch" IsReadOnly="True"/>
    </DockPanel>
  </Grid>
</Window>
